{
  "name": "poki-wars-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for PokiWars game",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat run scripts/deploy-poki-token.js --network localhost",
    "deploy:polygon": "hardhat run scripts/deploy-poki-token.js --network polygon",
    "deploy:amoy": "hardhat run scripts/deploy-poki-token.js --network polygonAmoy",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:amoy": "hardhat verify --network polygonAmoy",
    "verify:contract": "hardhat run scripts/verify-deployed-contract.js --network polygon",
    "test:contract": "hardhat run scripts/test-deployed-contract.js --network polygon",
    "check:contract": "hardhat run scripts/check-contract-on-explorer.js --network polygon",
    "transfer:pkt": "hardhat run scripts/transfer-pkt-tokens.js --network polygon",
    "check:balances": "node scripts/check-balances.js",
    "distribute:winnings": "node scripts/distribute-winnings.js",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "polygon",
    "smart-contracts",
    "erc20",
    "gaming"
  ],
  "author": "PokiWars Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "chai": "^4.3.7",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
